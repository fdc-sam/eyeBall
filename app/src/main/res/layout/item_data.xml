<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_item_background"
    android:layout_margin="5dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/circle_background"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:id="@+id/relative_layout_first_name">

        <TextView
            android:id="@+id/first_letter_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:textSize="30sp"
            android:text="S"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white" />

    </RelativeLayout>


    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/relative_layout_first_name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/facebook_black"
        android:text="Sample Name"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:textColor="@color/facebook_black"
                    android:text="Male"
                    />

                <TextView
                    android:id="@+id/division_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/facebook_black"
                    android:layout_marginEnd="5dp"
                    android:text="@string/division_slash"
                    />

                <TextView
                    android:id="@+id/birthTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/facebook_black"
                    android:textSize="16sp"
                    android:text="16"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/facebook_black"
                android:textSize="14sp"
                android:text="fdc.samvillarta@gmail.com"
                />

    </LinearLayout>

    <TextView
        android:id="@+id/idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:visibility="gone" />

    </LinearLayout>

    <TextView
    android:id="@+id/itemTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:text="@string/fa_arrow_right"
    android:textColor="@color/black"
    android:textSize="30sp"
    tools:ignore="RtlCompat"
    android:visibility="gone"
    />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:id="@+id/relative_layout_voice_call">

        <Button
            android:id="@+id/btn_show_voice_call_alert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round_background_green"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/voice_call_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_voice_call" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/relative_layout_voice_call"
        android:backgroundTint="@color/black"
        android:id="@+id/relative_layout_video_call"
        >

        <Button
            android:id="@+id/btn_show_video_call_alert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/btn_round_background_green"
            android:textColor="@color/facebook_white"
            android:textSize="14sp">

        </Button>

            <ImageView
                android:id="@+id/video_call_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_vodeo_call" />

    </RelativeLayout>

    <Button
    android:id="@+id/deleteButton"
    android:layout_width="111dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="10dp"
    android:text="Delete"
    android:visibility="gone" />


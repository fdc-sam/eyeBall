<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.VideoCallFragment"
    android:background="@drawable/background_blur"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_corner_default"
        android:orientation="vertical"

        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/alert_btn_close"
            android:layout_width="24dp"
            android:layout_height="19dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/alert_btn_view_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View profile"
                android:textAllCaps="false"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_primary" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/alert_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textAllCaps="false"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_default" />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>